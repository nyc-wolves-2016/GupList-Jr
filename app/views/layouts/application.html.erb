<!DOCTYPE html>
<html>
  <head>
    <title>GuplistJr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div>
      <header>
        <nav>
          <div class="logo">
            <div class="left_bracket2">&lt;</div>
            <div class="question_mark2">&#63;</div>
            <div class="right_bracket2">&gt;</div>
          </div>
          <span class="nav_links_span">
            <% if logged_in? %>
              <a class="nav_links" href="/users/<%= current_user.id %>"><%= current_user.username %></a>
              <a class="nav_links"href="/users/logout">Logout</a>
              <a class="nav_links" href="/questions/new">Ask a Question</a>
            <% else %>
              <a class="nav_links"href="/users/new">Register</a>
              <a class="nav_links"href="/users/login">Login</a>
            <% end %>
            <a class="nav_links"href="/">Home</a>
            </span class="nav_links">
        </nav>
      </header>
   </div>

    <%= yield %>

  </body>
</html>
