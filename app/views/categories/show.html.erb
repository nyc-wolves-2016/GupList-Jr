<h1>Category: </h1>
  <h2><%= @category.title %></h2>

<hr>

  <h3>Listings: </h3>
    <table>
      <tr>
        <th>Title</th>
        <th>Content</th>
      </tr>

      <% @category.articles.each do |article| %>

        <tr>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= link_to 'Show', article_path(article) %></td>
        </tr>

      <% end %>
    </table>
